<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #102031;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="project.AuthController">
    <AnchorPane layoutX="354.0" prefHeight="603.0" prefWidth="500.0" style="-fx-background-color: #020f1f;">
        <Button layoutX="133.0" layoutY="401.0" mnemonicParsing="false" onAction="#enter" prefHeight="50.0"
                prefWidth="250.0" style="-fx-background-color: #208fe5;" text="Login" textFill="#96e8ff">
            <font>
                <Font name="Baskerville Old Face" size="19.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <TextField fx:id="login" layoutX="133.0" layoutY="256.0" prefHeight="50.0" prefWidth="250.0"
                   promptText="User name" style="-fx-background-color: #020f1f; -fx-text-fill: #f6f6f6;">
            <font>
                <Font name="Baskerville Old Face" size="19.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="password" layoutX="133.0" layoutY="317.0" prefHeight="50.0" prefWidth="250.0"
                       promptText="Password" style="-fx-background-color: #020f1f; -fx-text-fill: #f6f6f6;">
            <font>
                <Font name="Baskerville Old Face" size="19.0"/>
            </font>
        </PasswordField>
        <Line endX="150.0" layoutX="233.0" layoutY="306.0" startX="-100.0" stroke="#f6f6f6"/>
        <Line endX="150.0" layoutX="233.0" layoutY="367.0" startX="-100.0" stroke="#f6f6f6"/>
        <Text fill="#208fe5" layoutX="230.0" layoutY="239.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Signin">
            <font>
                <Font name="Baskerville Old Face" size="16.0"/>
            </font>
        </Text>
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="175.0" layoutY="50.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../icon_log.png"/>
            </image>
        </ImageView>
    </AnchorPane>
    <Button layoutX="14.0" layoutY="556.0" mnemonicParsing="false" onAction="#reg" prefHeight="33.0" prefWidth="109.0"
            style="-fx-background-color: #102031;" text="Registration" textAlignment="CENTER" textFill="#208fe5"
            underline="true">
        <font>
            <Font name="Baskerville Old Face" size="16.0"/>
        </font>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
</AnchorPane>
